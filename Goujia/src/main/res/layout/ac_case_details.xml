<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/icon_back_" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="案例详情"
            android:textColor="@color/black" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_gray" />

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dip"
                android:scaleType="fitXY"
               android:background="@drawable/al_01"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dip"
                android:background="@drawable/al_02" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="550dip"
                android:background="@drawable/al_03" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dip"
                android:background="@drawable/al_04" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="378dip"
                android:background="@drawable/al_05" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="370dip"
                android:background="@drawable/al_06" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="374dip"
                android:background="@drawable/al_07" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="376dip"
                android:background="@drawable/al_08" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="580dip"
                android:background="@drawable/al_09" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="580dip"
                android:background="@drawable/al_10" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>